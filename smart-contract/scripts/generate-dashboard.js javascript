const fs = require('fs');
const path = require('path');

async function generateDashboard() {
  const gasReportPath = path.join(__dirname, '../gas-report.json');
  
  if (!fs.existsSync(gasReportPath)) {
    console.log("‚ö†Ô∏è  No gas report found. Run tests first.");
    return;
  }
  
  const gasData = JSON.parse(fs.readFileSync(gasReportPath, 'utf8'));
  
  let html = `
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>D&D NFT - Gas Dashboard</title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
      background: #1a1a1a;
      color: #fff;
    }
    h1 { text-align: center; }
    .card {
      background: #2a2a2a;
      border-radius: 8px;
      padding: 20px;
      margin: 20px 0;
    }
    canvas { max-width: 100%; }
  </style>
</head>
<body>
  <h1>üê≤ D&D NFT Gas Dashboard</h1>
  
  <div class="card">
    <h2>‚õΩ Gas Usage by Operation</h2>
    <canvas id="gasChart"></canvas>
  </div>
  
  <div class="card">
    <h2>üìä Statistics</h2>
    <table style="width: 100%; color: #fff;">
      <tr><th>Operation</th><th>Gas Used</th></tr>
      ${gasData.map(item => `
        <tr>
          <td>${item.operation}</td>
          <td>${item.gasUsed}</td>
        </tr>
      `).join('')}
    </table>
  </div>
  
  <script>
    const data = ${JSON.stringify(gasData)};
    const ctx = document.getElementById('gasChart').getContext('2d');
    
    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: data.map(d => d.operation),
        datasets: [{
          label: 'Gas Used',
          data: data.map(d => parseInt(d.gasUsed)),
          backgroundColor: 'rgba(54, 162, 235, 0.5)',
          borderColor: 'rgba(54, 162, 235, 1)',
          borderWidth: 1
        }]
      },
      options: {
        responsive: true,
        scales: {
          y: { beginAtZero: true }
        }
      }
    });
  </script>
</body>
</html>
  `;
  
  const dashboardPath = path.join(__dirname, '../gas-dashboard.html');
  fs.writeFileSync(dashboardPath, html);
  
  console.log("‚úÖ Dashboard generado:", dashboardPath);
  console.log("üåê Abre el archivo en tu navegador para ver las m√©tricas");
}

generateDashboard()
  .then(() => process.exit(0))
  .catch(error => {
    console.error(error);
    process.exit(1);
  });
